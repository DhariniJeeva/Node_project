  <%include header%>
  <!DOCTYPE html>
  <html lang="en">
  <head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
  </head>
  <body>
    <div class="container text-center">
      <h2 class="text-center">Would you like to contribute content for the website?</h2>
<div class="col-sm-12">
      <a href="#user-entry-form" class="btn btn-info toggle-buttons" data-toggle="collapse">User Content Form</a>

  <div id="user-entry-form" class="collapse">

        <div class="container text-center custom-outer">
        <form method="POST" action="/contact">
            <input type="hidden" value="1" name="hiddenValue">
          <p class="text-center">Answer the below form to help build the content</p>

        <div class="form-group custom">
      <label class="control-label col-sm-4" for="select" >select campus</label>
      <div class="col-sm-8">
        <select class="form-control" name ="select">
       <option value="" disabled selected>Choose your option</option>
       <option value="RIT US">RIT US</option>
       <option value="RIT Dubai">RIT Dubai</option>
       <option value="RIT Croatia">RIT Croatia</option>
     </select>
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="accomodation">choice of accomodation</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="accomodation"  name="accomodation" contenteditable="true">
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="shopping">choice of essentials shopping places</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="shopping"name="shopping" contenteditable="true">
      </div>
    </div>

    <div class="form-group custom">
      <label class="control-label col-sm-4" for="internet">choice of Internet & mobile Network providers</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="internet" name="internet" contenteditable="true">
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="club">Suggest Student organisation or Clubs</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="club"name="club" contenteditable="true">
      </div>
    </div>


        <button type="submit"  class="btn btn-success" style="float : right">Request review</button>
      </form>

    </div>
  </div>
</div>

<div class="col-sm-12">
      <a href="#contact-form" class="btn btn-info toggle-buttons" data-toggle="collapse">Contact form</a>
      <div id="contact-form" class="collapse">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="wrapper animated bounceInLeft">
            <div class="company-info">
              <h3 class="text-center">Contact Form</h3>
            </div>
            <div class="contact">
              <h1 class="text-center" style="color : green"></h1>
              <h3>Email Us</h3>
              <form method="POST" action="/contact">
                <p>
                  <label>Name</label>
                  <input type="text" name="name">
                </p>
                <p>
                  <label>Email Address</label>
                  <input type="email" name="email">
                </p>
                <p class="full">
                  <label>Message</label>
                  <textarea name="message" rows="5"></textarea>
                </p>
                <p class="full">
                  <button type="submit">Submit</button>
                </p>
              </form>


            </div>
          </div>
        </div>
      </div>
</div>
    </div>


  </body>
  </html>
  <%include footer%>
