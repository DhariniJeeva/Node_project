<%include header%>

<html>
<head>
  <meta charset="UTF-8">
<script>
$(function(){
  $('#yes').on("click", function(){
    console.log("fsd");
    $('#user_form input, #user_form select').removeAttr('readonly');
  });
  $('#no').on("click", function(){
    $('#user_form input, #user_form select').attr('readOnly', 'readOnly');
  });
});
</script>
</head>
<body>
  <div class="container">
              <% if (message.length > 0) { %>

      <h3 class="text-center">Review data</h3>

      <h5 class="text-center">Edit the form before posting?</h5>
<div class="text-center" style="padding:2rem">
      <button id="yes" class="text-center"><i class="fa fa-thumbs-up fa-2x" aria-hidden="true">&nbsp;Yes</i></button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <button id="no" class="text-center"><i class="fa fa-thumbs-down fa-2x" aria-hidden="true">&nbsp;No</i></button>
    </div><br/><br/>
      <form method="POST" action="/editPage" encType="multipart/form-data" id="user_form">
      <div class="form-group custom">

  <input type="hidden" value = "<%= JSON.stringify(message[0]['id']) %>" name="hidden_field"/>
      <label class="control-label col-sm-4" for="select" >select campus</label>
      <div class="col-sm-8">
        <select class="form-control" name ="select">
        <option><%-JSON.stringify(message[0]['campus']) %></option>
     </select>
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="accomodation">choice of accomodation</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="accomodation"  name="accomodation" value=<%-JSON.stringify(message[0]['accomodation']) %>>
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="shopping">choice of essentials shopping places</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="shopping" name="shopping" value =<%-JSON.stringify(message[0]['shopping']) %>>
      </div>
    </div>

    <div class="form-group custom">
      <label class="control-label col-sm-4" for="internet">choice of Internet & mobile Network providers</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="internet" name="internet" value =<%-JSON.stringify(message[0]['internet']) %> >
      </div>
    </div>
    <div class="form-group custom">
      <label class="control-label col-sm-4" for="club">Suggest Student organisation or Clubs</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="club"name="club" value =<%-JSON.stringify(message[0]['club']) %> >
      </div>
    </div>
          <input type="submit"  class="btn btn-success" style="float:right;" id="approve" name="approve" value="Approve">

    <input type="submit"  class="btn btn-success" style="float:left; background-color:red" id="reject" name="reject" value ="Reject">

      </form>

      <% } else { %>
        <h5 class="text-center">No Pending review requests!</h5>
       <% } %>
    </div>
  </body>
  </html>

<%include footer%>
