<%include header%>

<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
  <div class="container">
    <h3 class="text-center ">Dining Details</h3>
    <p class="text-center">Please select a country from the below list to view dining options</p>
    <form class="form-horizontal contactme" role="form" method="POST" action="/home/dashboard/dining">
      <select name="select_country" id="some">
        <option disabled selected>Select a Country</option>
        <option value="1" >RIT US</option>
        <option value="2" >RIT Croatia</option>
        <option value="3" >RIT Dubai</option>
      </select>
      <button type="submit"  class="btn btn-primary" value="submit" id="submit" style="display: none">Select Country</button>

    </form>
    <script>
    $( document ).ready(function() {
      $('select').on('change', function() {
        $('#submit').fadeIn(500);
      })
    });
    </script>
    <% if (messages.length > 0 && messages[0].id == 1) { %>
      <%include rit_dining%>
      <script>
      $( document ).ready(function() {
        $('#some option[value=1]').attr('selected','selected');
      });
      </script>
      <% } %>
      <% if (messages.length > 0 && messages[0].id == 2) { %>
        <%include rit_dining_croatia%>
        <script>
        $( document ).ready(function() {
          $('#some option[value=2]').attr('selected','selected');
        });
        </script>
        <% } %>

        <% if (messages.length > 0 && messages[0].id == 3) { %>
          <%include rit_dining_dubai%>
          <script>
          $( document ).ready(function() {
            $('#some option[value=3]').attr('selected','selected');
          });
          </script>
          <% } %>
          <script>
          $(document).ready(function() {
            $('select').material_select();
          });
          </script>

        </body>
        </html>
        <%include footer%>
